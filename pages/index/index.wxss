.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx;
}
.button{
  display: flex;        
  align-items: center;  
  justify-content: center; 
  padding: 0 20rpx;     
  width: 100%; 
}

.result-box {
  width: 100%;
  height: 40rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 5rpx;
  padding: 5rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
}

.result-text {
  font-size: 10rpx;
  color: #333;
  text-align: center;
  word-break: break-all;
}

.main-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  box-sizing: border-box;
}

.welcome-section {
  text-align: center;
  margin-bottom: 50rpx;
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #2c405a;
  margin-bottom: 20rpx;
}

.welcome-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.result-box {
  width: 100%;
  min-height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e0e0e0;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  word-break: break-all;
  line-height: 1.6;
}

.button-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.action-btn {
  width: 100%;
  margin-bottom: 40rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 100%;
}

.card-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e0e0e0;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card-item:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.card-icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 90%;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c405a;
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

