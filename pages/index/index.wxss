.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx;
}

.result-box {
  width: 100%;
  height: 300rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 50rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
}

.result-text {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  word-break: break-all;
}
